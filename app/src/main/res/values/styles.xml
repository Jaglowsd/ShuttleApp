<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Lawrence_primary_blue</item>
        <item name="colorPrimaryDark">@color/Lawrence_primary_black</item>
        <item name="colorAccent">@color/Lawrence_secondary_blue</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="colorPrimaryDark">@color/default_color</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/default_color</item>
        <item name="android:textColorSecondary">@color/default_color</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
